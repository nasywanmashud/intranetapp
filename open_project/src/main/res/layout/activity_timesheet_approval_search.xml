<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_main_btn"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/ampm_text_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_google_signin_btn_text_light_default"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Date From"

                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/dateFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Date"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imgfrom"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/calendar" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Date To"
                            android:textColor="@android:color/black"

                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/dateTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Date"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imgto"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/calendar" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Project"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/project"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView12721"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Task"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/task"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView127214"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Staff"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/staff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView12711"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approver"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/approver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approver"
                            android:textColor="@android:color/black"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView127215"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView127212"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OT"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/OT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="16.48"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/search"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/red_main_btn"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/reset"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/red_main_btn"
                    android:text="Reset"
                    android:textColor="@color/button_text_color" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>
</LinearLayout>