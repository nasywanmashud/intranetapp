<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical"-->
           <!--&gt;-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@color/ampm_text_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_google_signin_btn_text_light_default"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Leave Type"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/leavetype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView12721"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Application Type"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/applicationtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Date From"

                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/dateFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/imgfrom"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/calendar" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Date To"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/dateTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint=""
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/imgto"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/calendar" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/button_text_color"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView12711"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approver"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/approver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select...."
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <Button
                    android:id="@+id/search"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_main_btn"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_centerHorizontal="false"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedbuton"
            android:text="  Search  "
            android:textColor="@color/button_text_color" />

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/white">

                <ListView
                    android:id="@+id/listviewsssss"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:divider="#d1d1d1"
                    android:dividerHeight="5dp">

                </ListView>

            </LinearLayout>

        <!--</LinearLayout>-->
    <!--</ScrollView>-->
</LinearLayout>